<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewdDaysSched"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/HolderTvDecision"
                android:text="on-going"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/HolderTvDay"
                android:textSize="18dp"
                android:text="MONDAYS"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/HolderTvLocation"
                android:textSize="16sp"
                android:text="Zamboanga - Pagadian"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HolderTvTime"
                android:text="ETD 12:00 PM - ETA 3:00 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
        
        <Switch
            android:id="@+id/SwitchDecideSched"
            android:theme="@style/SCBSwitch"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

</android.support.v7.widget.CardView>