<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewPending"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    tools:ignore="MissingPrefix">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVArrivedVesselType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="PASSENGER"
                android:textColor="@color/black" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/TVArrivedVesselName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MV MARY JOY"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TVArrivedSchedDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONDAY"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/TVArrivedOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM : ZAMBOANGA CITY" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/TVArrivedETD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/TVArrivedDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DESTINATION : LAMITAN CITY" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/TVArrivedETA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Time Arrived"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/TVArrivedActualTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="10:11 AM"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Hours Travelled"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/TVArrivedHoursTravelled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="5dp"
                    android:text="1H : 23M : 24S"
                    android:textColor="#000" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/TVArrivedImageVessel"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/qz" />
    </FrameLayout>

</android.support.v7.widget.CardView>